<!--====== COUNTDOWN PART START ======-->

<section class="countdown_area_2 pt-80">
    <div class="countdown_wrapper_2">
        <div class="container">
            <div class="row justify-content-center">
                @*<div class="col-lg-6 col-md-9">
                    <div class="countdown_2 mt-50">
                        <div data-countdown="2021/12/27"></div>
                    </div>
                </div>*@
                <div class="col-xl-5 col-lg-6 col-md-8">
                    <div class="register_countdown_2 mt-50">
                        <div class="register_countdown_content">
                            <h4 class="title">Kurs haqqında məlumat</h4>
                        </div>
                        <img class="down" src="~/fiziknihad/assets/images/down.png" alt="Icon">

                        <div class="register_form register_form_2 text-center">
                            <div class="register_form_title">
                                <h4 class="title">Kursa Yazıl</h4>
                            </div>
                            <div class="register_form_wrapper">
                                <partial name="~/Views/Register/_RegisterAddPartial.cshtml" model="new RegisterAddDto()" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!--====== COUNTDOWN PART ENDS ======-->
