@model Fizika.Entities.DTOs.ArticleListDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Silinmiş Məqalələr";
}
<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Article" asp-action="DeletedArticles">Silinmiş Məqalələr</a></li>
</ol>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Silinmiş Məqalələr
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="deletedArticlesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Kateqoriya</th>
                        <th>Başlıq</th>
                        <th>Şəkil</th>
                        <th>Tarix</th>
                        <th>Baxış</th>
                        <th>Şərh</th>
                        <th>Aktivdirmi ?</th>
                        <th>Silinibmi ?</th>
                        <th>Yazar</th>
                        <th>Edit Tarix</th>
                        <th>Editor</th>
                        <th>Əməliyyatlar</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Kateqoriya</th>
                        <th>Başlıq</th>
                        <th>Şəkil</th>
                        <th>Tarix</th>
                        <th>Baxış</th>
                        <th>Şərh</th>
                        <th>Aktivdirmi ?</th>
                        <th>Silinibmi ?</th>
                        <th>Yazar</th>
                        <th>Edit Tarix</th>
                        <th>Editor</th>
                        <th>Əməliyyatlar</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var article in Model.Articles)
                    {
                        <tr name="@article.Id">
                            <td>@article.Id</td>
                            <td>@*@article.Category.Name*@ @article.CategoryId </td>
                            <td>@article.Title</td>
                            <td><img src="~/img/@article.ThumbNail" class="my-image-table" /></td>
                            <td>@article.Date.ToShortDateString()</td>
                            <td>@article.ViewsCount</td>
                            <td>@article.CommentCount</td>
                            <td>@(article.IsActive ? "Bəli" : "Xeyr")</td>
                            <td>@(article.IsDeleted ? "Bəli" : "Xeyr")</td>
                            <td>@article.CreatedByName</td>
                            <td>@article.ModifiedDate.ToShortDateString()</td>
                            <td>@article.ModifiedByName</td>
                            <td>
                                <a class="btn btn-warning btn-sm btn-undo" data-id="@article.Id"><span class="fas fa-undo"></span></a>
                                <button class="btn btn-danger btn-sm btn-delete" data-id="@article.Id"><span class="fas fa-minus-circle"></span></button>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="~/js/crud/article/deletedArticles.js" type="application/ecmascript"></script>
}
@section Styles
{
    
}