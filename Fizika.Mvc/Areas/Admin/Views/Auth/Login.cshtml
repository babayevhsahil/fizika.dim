@model Fizika.Entities.DTOs.UserLoginDto
@{ 
    ViewBag.Title = "Giriş";
    Layout = "_UserLoginLayout";
}
<div class="col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
        <div class="userpic"><img src="~/fiziknihad/assets/images/albert4.png" alt=""></div>
        <div class="panel-body">
            <h2 class="text-center">Daxil Ol</h2>
            <form asp-controller="Auth" asp-action="Login" method="post">
                
                <fieldset>
                    <div class="form-group">
                        <input class="form-control" asp-for="Email"  type="email" autofocus>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="form-control" asp-for="Password" type="password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input  type="checkbox" asp-for="RememberMe">
                            Xatırla Məni
                        </label>
                    </div>
                    <br>
                    <button type="submit" class="btn btn-lg btn-primary btn-block">Daxil Ol</button>
                    <br />
                    <div asp-validation-summary="All" class="text-danger"></div>
                </fieldset>
                <br>
                <br>
            </form>
        </div>
    </div>
</div>