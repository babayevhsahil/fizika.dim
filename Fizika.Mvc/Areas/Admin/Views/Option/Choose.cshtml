@model Fizika.Entities.Concrete.ChooseUsPageInfo

@{
    Layout = "_Layout";
    ViewBag.Title = "ChooseUs";

}
<div class="row">
    <div class="col-lg-12">
        <div class="card mt-1 mb-1">
            <div class="card-header">
                <h4 class="text-center"><span class="fas fa-edit"></span> Niye biz?</h4>
            </div>
            <div class="card-body">
