                        <div class="form-group col-md-12">
                            <label asp-for="Header"></label>
                            <input class="form-control" asp-for="Header" placeholder="Zehnet olmasa basligi yazin" />
                            <span class="text-danger" asp-validation-for="Header"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="ContentFirst"></label>
                            <textarea class="form-control" asp-for="ContentFirst" placeholder="Zehmet olmasa  metni girin." rows="4"></textarea>
                            <span class="text-danger" asp-validation-for="ContentFirst"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="ContentSecond"></label>
                            <textarea class="form-control" asp-for="ContentSecond" placeholder="Zehmet olmasa  metni girin." rows="4"></textarea>
                            <span class="text-danger" asp-validation-for="ContentSecond"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="ContentThird"></label>
                            <textarea class="form-control" asp-for="ContentThird" placeholder="Zehmet olmasa  metni girin." rows="4"></textarea>
                            <span class="text-danger" asp-validation-for="ContentThird"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="ContentFourth"></label>
                            <textarea class="form-control" asp-for="ContentFourth" placeholder="Zehmet olmasa  metni girin." rows="4"></textarea>
                            <span class="text-danger" asp-validation-for="ContentFourth"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <button type="submit" class="btn btn-primary"><span class="fas fa-save"></span> Yadda Saxla</button>
                            <a class="btn btn-danger" asp-area="Admin" asp-controller="Home" asp-action="Index"><span class="fas fa-times"></span> Legv Et</a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
