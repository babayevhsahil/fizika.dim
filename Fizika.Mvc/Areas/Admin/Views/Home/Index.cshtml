@model Fizika.Mvc.Areas.Admin.Models.DashboardViewModel
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-12  header-wrapper">
        <h1 class="page-header">Admin Panel</h1>
        <p class="page-subtitle">Buradan saytdakı bütün məlumatları editləyə,silə və əlavə edə bilərsiniz.</p>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<ol class="breadcrumb">
    <li><a href="javascript:void(0)">Fizika</a></li>
    <li class="active">Admin Panel</li>
</ol>

<!-- /.row -->

<div class="row">
    <div class="col-lg-3 col-sm-6">
