@model Fizika.Entities.DTOs.StudentsListDto

@using Fizika.Shared.Utilities.Results.ComplexTypes
@{ Layout = "_Layout";
    ViewBag.Title = "Team Index"; }

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<div class="row">
    <div class="col-md-12  header-wrapper">
        <h1 class="page-header">Admin - Komanda</h1>
        <p class="page-subtitle">Buradan yeni komanda uzvu yarada, editləyə və silə bilərsiniz.</p>
    </div>
     /.col-lg-12 
</div>
 /.row 

<ol class="breadcrumb">
    <li><a href="/Admin">Admin</a></li>
    <li class="active">Komanda</li>
</ol>

<div id="modalPlaceHolder" aria-hidden="true"></div>
<div class="row">
    <div class="col-md-12 card">
        @if (Model.ResultStatus == ResultStatus.Succes)
        {
<table class="table no-footer dataTable dtr-inline" id="dataTables">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ad & Soyad</th>
            <th>Universitet</th>
            <th>Umumi Bal</th>
            <th>Fizika Bal</th>
            <th>Image</th>
            <th>Aktiv</th>
            <th>Silinib</th>
            <th>Tarix</th>
            <th>İstifadəçi Adı</th>
            <th>Son Edit Tarixi</th>
            <th>Son Editləyən İstifadəçi Adı</th>
            <th>Əməliyyatlar</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>ID</th>
            <th>Ad & Soyad</th>
            <th>Universitet</th>
            <th>Umumi Bal</th>
            <th>Fizika Bal</th>
            <th>Image</th>
            <th>Aktiv</th>
            <th>Silinib</th>
            <th>Tarix</th>
            <th>İstifadəçi Adı</th>
            <th>Son Edit Tarixi</th>
            <th>Son Editləyən İstifadəçi Adı</th>
            <th>Əməliyyatlar</th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var team in Model.Students)
        {
        <tr class="odd" name="@team.Id">
            <td>@team.Id</td>
            <td>@team.Fullname</td>
            <td>@team.University</td>
            <td>@team.Point</td>
            <td>@team.PointPhysic</td>
            <td><img src="~/img/@team.Photo" /> </td>
            <td class="center"><span class="status active">@(team.IsActive ? "Bəli" : "Xeyr")</span></td>
            <td class="center"><span class="status active">@(team.IsDeleted ? "Bəli" : "Xeyr" )</span></td>
            <td class="center">@team.CreatedDate.ToShortDateString()</td>
            <td class="center">@team.CreatedByName</td>
            <td class="center">@team.ModifiedDate.ToShortDateString()</td>
            <td class="center">@team.ModifiedByName</td>
            <td class="text-center">
                <a asp-area="Admin" data-id="@team.Id" class="btn btn-primary btn-sm btn-block" asp-action="Update" asp-controller="Student" asp-route-studentId="@team.Id">
                    <span class="fas fa-edit"></span>
                </a>
                <button class="btn btn-danger btn-sm btn-delete btn-block" data-id="@team.Id"><span class="fas fa-minus-circle"></span> </button>
            </td>
        </tr>}
    </tbody>
</table> }
else if (Model.ResultStatus == ResultStatus.Error)
{
<div class="alert alert-danger">
    <h3>@Model.Message</h3>
    <p>Dashboarda qayıtmaq üçün <a asp-area="Admin" asp-controller="Home" asp-action="Index">Tıklayın</a></p>
</div>}
        <button class="btn btn-primary btnUpdate" type="button" disabled style="display:none;">
            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            Yüklənir...
        </button>
    </div>
</div>

@section Scripts{
    <script src="~/js/crud/team/teamIndex.js" type="application/ecmascript"></script>
}
