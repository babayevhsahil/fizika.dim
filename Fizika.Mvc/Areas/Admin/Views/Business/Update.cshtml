@model Fizika.Mvc.Areas.Admin.Models.BusinessUpdateViewModel
@{
    ViewBag.Title = "Xidmet edit Et";
    Layout = "_Layout";
}
<!-- CSS only -->
<div class="row">
    <div class="col-md-12  header-wrapper">
        <h1 class="page-header">Admin - Xidmetler</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<ol class="breadcrumb">
    <li><a asp-area="Admin" asp-action="Index" asp-controller="Home">Admin</a></li>
    <li><a asp-area="A" asp-action="Index" asp-controller="Business">Xitmet</a></li>
    <li class="active"><a asp-area="A" asp-action="Add" asp-controller="Business">Edit Et</a></li>
</ol>

<form asp-action="Update" asp-controller="Business" method="post" enctype="multipart/form-data">
    <div class="row mt-2">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Header"></label>

                        <input class="form-control" id="articleTitle" asp-for="Header" />
                        <span class="text-danger" asp-validation-for="Header"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea class="form-control" id="text-editor" asp-for="Description"></textarea>
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    Vacib əməliyyatlar
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <input type="hidden" asp-for="Icon" />
                        <input type="hidden" asp-for="PictureFile" />
                        <input type="hidden" asp-for="Id" />
                        <label for="thumbnailUpload" asp-for="PictureFile"></label>
                        <img src="~/img/@Model.Icon" width="150" />
                        <input type="file" accept="image/*" id="thumbnailUpload" class="form-control-file" asp-for="PictureFile" placeholder="Zəhmət Olmasa Şəkil seçin" />
                        <span class="text-danger" asp-validation-for="PictureFile"></span>
                    </div>
                    <div class="form-check">
                        <label asp-for="IsActive" for="isActive" class="form-check-label"></label>
                        <input type="checkbox" id="isActive" class="form-check-input" asp-for="IsActive" />
                        <span class="text-danger" asp-validation-for="IsActive"></span>
                    </div>
                    <div class="form-check">
                        <label asp-for="IsDeleted" for="isActive" class="form-check-label"></label>
                        <input type="checkbox" id="isActive" class="form-check-input" asp-for="IsDeleted" />
                        <span class="text-danger" asp-validation-for="IsDeleted"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" id="submit" class="btn btn-info btn-block">Yadda Saxla</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script src="~/vendor/datatables/jquery-3.6.0.min.js"></script>
    <script src="~/js/crud/business/businessIndex.js"></script>
}
@section Styles{
    <link href="~/css/select2-bootstrap4.min.css" rel="stylesheet" />
}