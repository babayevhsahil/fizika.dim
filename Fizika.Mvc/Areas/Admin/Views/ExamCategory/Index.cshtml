@model Fizika.Entities.DTOs.ExamCategoryListDto
@using Fizika.Shared.Utilities.Results.ComplexTypes
@{ Layout = "_Layout";
    ViewBag.Title = "ProjectCategory Index"; }

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<div class="row">
    <div class="col-md-12  header-wrapper">
        <h1 class="page-header">Admin - Test Kateqoriya</h1>
        <p class="page-subtitle">Buradan yeni test Kateqoriya yarada, editləyə və silə bilərsiniz.</p>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<ol class="breadcrumb">
    <li><a href="/Admin">Admin</a></li>
    <li class="active">Proyekt Kateqoriya</li>
</ol>

<div id="modalPlaceHolder" aria-hidden="true"></div>
<div class="row">
    <div class="col-md-12 card">
        @if (Model.ResultStatus == ResultStatus.Succes)
        {
<table class="table no-footer dataTable dtr-inline" id="dataTables">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ad</th>
            <th>Aktiv</th>
            <th>Silinib</th>
            <th>Tarix</th>
            <th>İstifadəçi Adı</th>
            <th>Son Edit Tarixi</th>
            <th>Son Editləyən İstifadəçi Adı</th>
            <th>Əməliyyatlar</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>ID</th>
            <th>Ad</th>
            <th>Aktiv</th>
            <th>Silinib</th>
            <th>Tarix</th>
            <th>İstifadəçi Adı</th>
            <th>Son Edit Tarixi</th>
            <th>Son Editləyən İstifadəçi Adı</th>
            <th>Əməliyyatlar</th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var pcategory in Model.ExamCategories)
        {
<tr class="odd" name="@pcategory.Id">
    <td>@pcategory.Id</td>
    <td>@pcategory.Name</td>
    @*<td>@pcategory.Description</td>*@
    <td class="center"><span class="status active">@(pcategory.IsActive ? "Bəli" : "Xeyr")</span></td>
    <td class="center"><span class="status active">@(pcategory.IsDeleted ? "Bəli" : "Xeyr" )</span></td>
    <td class="center">@pcategory.CreatedDate.ToShortDateString()</td>
    <td class="center">@pcategory.CreatedByName</td>
    <td class="center">@pcategory.ModifiedDate.ToShortDateString()</td>
    <td class="center">@pcategory.ModifiedByName</td>
    <td class="text-center">
        <button class="btn btn-primary btn-sm btn-block btn-update" data-id="@pcategory.Id"><span class="fas fa-edit"></span> </button>
        <button class="btn btn-danger btn-sm btn-delete btn-block" data-id="@pcategory.Id"><span class="fas fa-minus-circle"></span> </button>
    </td>
</tr>}
    </tbody>
</table> }
else if (Model.ResultStatus == ResultStatus.Error)
{
<div class="alert alert-danger">
    <h3>@Model.Message</h3>
    <p>Dashboarda qayıtmaq üçün <a asp-area="Admin" asp-controller="Home" asp-action="Index">Tıklayın</a></p>
</div>}
        <button class="btn btn-primary btnUpdate" type="button" disabled style="display:none;">
            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            Yüklənir...
        </button>
    </div>
</div>

<!-- JavaScript -->
@section Scripts{
    <script src="~/js/crud/projectCategory/projectCategoryIndex.js" type="application/ecmascript"></script>
}
